<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to t('admin.questions.index.header'), admin_questions_path %></li>
    </ol>
</nav>

<h1><%= @question %></h1>

<p>
    <strong>Text EN:</strong>
    <%= @question.text_en %>
</p>

<p>
    <strong>Text ET:</strong>
    <%= @question.text_et %>
</p>

<p>
    <strong>Comment:</strong>
    <%= simple_format @question.comment %>
</p>

<h2>Answers</h2>

<%= render @question.answers %>

<%= link_to 'Edit', edit_admin_question_path(@question) %>

<% if @question.inactive? %>
    <%= link_to t('.activate_btn'), activate_admin_question_path(@question), method: :patch,
                class: 'btn btn-primary' %>
<% end %>

<% if @question.active? %>
    <%= link_to t('.deactivate_btn'), deactivate_admin_question_path(@question), method: :patch,
                class: 'btn btn-primary' %>
<% end %>
