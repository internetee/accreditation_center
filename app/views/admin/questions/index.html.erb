<h1><%= t '.header' %></h1>

<table class="table">
    <thead>
        <tr>
            <th><%= Question.human_attribute_name :name %></th>
            <th><%= Question.human_attribute_name :category_id %></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @questions.each do |question| %>
            <tr>
                <td><%= link_to question, admin_question_path(question) %></td>
                <td><%= question.category.name %></td>
                <td>
                    <%= link_to 'Edit', edit_admin_question_path(question) %>
                    <%= link_to 'Destroy', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<br>

<%= link_to 'New Question', new_admin_question_path %>
