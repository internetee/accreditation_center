<div class="min-h-screen bg-gray-100 py-6 flex flex-row justify-evenly items-center sm:py-12">

  <div class="relative py-3">
    <div
      class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
    </div>
    <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
      <div class="">
		<p class="count-of-questions">
		<b><%= @total_answered_questions %>/<%= @total_category_questions %> </b> 
		<span class="text-black font-bold">KÃ¼simusele vastatud</span>
		</p>

		<% if @question.question_type == 'multiple choice' %>
			<ul class="question-number-list">
				<% @questions.each_with_index do |question, index| %>
					<li class="<%= 'active-question' if index+1 == @total_answered_questions + 1 %>
										<%= 'answered' if question.answered?(current_user) %>
										<%= ' green' if question.multiple_answers_were_correct?(current_user) %>
					">
					<%= index+1 %>. Question</li>
				<% end %>
			</ul>

		<% else %>

		<p>
			<ul class="question-number-list">
				<% @questions.each_with_index do |question, index| %>
					<li class="<%= 'active-question' if index+1 == @total_answered_questions + 1 %>
										<%= 'answered' if question.answered?(current_user) %>
										<%= ' green' if question.answered_was_correct?(current_user) %>
					">
					<%= index+1 %>. Question</li>
				<% end %>
			</ul>
		</p>
		<% end %>
      </div></div></div>

      <div>
	<% if @question.question_type == 'multiple choice' %>
		<%= render partial: 'checkbox_question' %>
	<% else %>
		<%= render partial: 'radiobutton_question' %>
	<% end %>
      </div>
</div>

