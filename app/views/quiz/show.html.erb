	<div class="container">

		<h2>Your categories:</h2>
		<% if @categories.any? %>

			<table class="table-custom">
				<thead>
					<th>ID</th>
					<th>Title</th>
					<th>Status</th>
					<th>Type</th>
					<th>Challenges</th>
					<th>Actions</th>
				</thead>
				<tbody>
				
				<% @categories.each do |category| %>
					<tr>
						<td><%= category.id %></td>
						<td><%= category.title %></td>
						<td>Status</td>
						<td>Type</td>
						<td>Challenges</td>
						<td><%= link_to "Start", quiz_category_path(quiz_id: params[:id], id: category.id), class: 'actions' %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		<% else %>
			<p>No any categories</p>
		<% end %>

