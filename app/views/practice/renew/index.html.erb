<div class="bg-gray-100 py-6 flex flex-row justify-evenly items-center sm:py-12">
	<div class="category-description <%= @result.nil? ? "" : @result ? "green-border" : "red-border" %> m-10">
		<%= form_with action: @result do |f| %>
			<h2 class="box-title center">Transfer domain test</h2>
			<h4 class="center <%= @result.nil? ? "" : @result ? "green" : "answered" %>">
				<%= @result.nil? ? "" : @result ? "Success" : "Failed" %>
			</h4>
				<h4> renew domains.</h4>

				<hr>

				<ul>		
					<li>Domain name: <b><%= @domain_one %></b></li>
					<li>Renew value: <b>3 month</b></li>
					<li>Current domain expire date: <b><%= @domain_one_expire_date.to_date %></b></li>
					<li>Expire date should be: <b><%= @domain_one_expire_date.to_date + 3.month %></b></li>
				</ul>

        <ul>
          <li>Domain name: <b><%= @domain_two %></b></li>
					<li>Renew value: <b>5 year and 6 month</b></li>
					<li>Current domain expire date: <b><%= @domain_two_expire_date.to_date %></b></li>
						<li>Expire date should be: <b><%= @domain_one_expire_date.to_date + 6.month + 5.years %></b></li>
        </ul>
				<h5>When will be ready, press Submit</h5>

			<div class="loggin-wrapper box-button-wrapper">
				<% if @result.nil? or !@result %>
					<%= f.submit "Submit", class: 'actions' %>
				<% else %>
					<%= link_to "Next", practice_change_registrant_email_index_path, class: 'actions' %>
				<% end %>

				<%= link_to "Cancel", root_path, class: 'actions-red' %>
			</div>
		<% end %>
	</div>
</div>